{
    "compilerOptions": {
        "types": ["node"],
        "target": "ES6",
        "jsx": "react",
        "module": "ESNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./typings"
        ]
    },
    "include": [
        "typings/**/*",
        "src/**/*",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
